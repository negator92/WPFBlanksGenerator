<Window x:Class="WPFBlanksGenerator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        DataContext="{Binding ApplicationViewModel, Source={x:Static Application.Current}}" 
        Title="WPF template creator" MinHeight="300" MinWidth="450" Background="#333333">
    <DockPanel Margin="5">
        <Button DockPanel.Dock="Bottom" Margin="0,5,0,0">
            <TextBlock Text="Create WPF project" />
        </Button>
        <DockPanel DockPanel.Dock="Bottom" Margin="0,5,0,0">
            <Button DockPanel.Dock="Right" Margin="5,0,0,0">
                <TextBlock Text="Chosose" />
            </Button>
            <TextBox Text="ProjectPath" />
        </DockPanel>
        <TextBox Text="ProjectName" />
    </DockPanel>
</Window>
